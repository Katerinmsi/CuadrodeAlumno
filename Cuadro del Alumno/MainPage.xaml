<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cuadro_del_Alumno.MainPage">

    <StackLayout>
        <Label Text="Ingrese un número entero positivo:" />
        <Entry x:Name="NumeroEntry" Placeholder="Ingrese un número" Keyboard="Numeric" />

        <Button Text="Calcular" Clicked="CalcularButton_Clicked" />

        <Label x:Name="ResultadoLabel" />
    </StackLayout>

</ContentPage>
